/* miniprogram/pages/msgList/index.wxss */
.msgList-page{
  width: 100%;
  height: 100%;
  background: #f9f8f9;
}
.tab-box{
  width: 100%;
  margin-top: 146rpx;
  display: flex;
}
.tab-box view{
  flex: auto;
  text-align: center;
}
.tab-box view text{
  font-size: 32rpx;
  font-family: PingFang, PingFang-SC-Medium;
  font-weight: SC-Medium;
  text-align: center;
  color: #666666;
}
.tab-box .active text{
  color: #2fc0c5;
  position: relative;
}
.tab-box .active text::after{
  position: absolute;
  content: ' ';
  bottom: -25rpx;
  left: 35%;
  width: 47rpx;
  height: 6rpx;
  background: #2fc0c5;
}

/* list */
.list-box{
  width: 100%;
  min-height: 80%;
  margin-top: 71rpx;
  background: #ffffff;
  padding-bottom: 80rpx;
  box-sizing: border-box;
}
.no-data-img image{
  width: 100%;
  margin: 0 auto;
  margin-bottom: 80rpx;
}

.list-box .msg-title{
  width: 702rpx;
  height: 59rpx;
  line-height: 59rpx;
  margin: 0 auto;
  background: #f4ffff;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  font-size: 28rpx;
  font-family: PingFang, PingFang-SC-Medium;
  font-weight: SC-Medium;
  text-align: left;
  color: #666666;
  letter-spacing: -0.56px;
}
.list-box .active{
  background: #fdf6ec;
}
.list-box .msg-title image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 31rpx;
  margin-right: 17rpx;
  vertical-align: middle;
}
.list-box .number-title{
  font-size: 32rpx;
  font-family: PingFang, PingFang-SC-Bold;
  font-weight: SC-Bold;
  text-align: left;
  color: #000;
  letter-spacing: -0.64px;
  margin-top: 21.5rpx;
  margin-left: 55rpx;
}
.list-msg-content{
  width: 100%;
  display: grid;
  grid-template-columns: 60% 40%;
  padding-bottom: 52rpx;
  box-sizing: border-box;
}
.list-msg-content .left{
  margin-left: 56rpx;
}
.list-msg-content .left view{
  font-size: 26rpx;
  font-family: PingFang, PingFang-SC-Regular;
  font-weight: SC-Regular;
  text-align: left;
  color: #666666;
  letter-spacing: -0.52px;
  margin-top: 15rpx;
}
.list-msg-content .right button{
  width: 132rpx;
  height: 50rpx;
  line-height:1.8;
  padding: 0;
  border: 1px solid #2fc0c5;
  border-radius: 26rpx;
  font-size: 26rpx;
  font-family: PingFang, PingFang-SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #2fc0c5;
  letter-spacing: -0.52px;
}
.list-msg-content .right button:hover{
  background: #2fc0c5;
  color: #fff;
}
.list-msg-content .right button:nth-last-of-type(1){
  margin-top: 30rpx;
}
.isIsFollowShow{
  text-align: center;
  margin-top: 10rpx;
}
.isIsFollowShow text{
  font-size: 26rpx;
  font-family: PingFang, PingFang-SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #2fc0c5;
  letter-spacing: -0.52px;
  border: 1px solid #2fc0c5;
  border-radius: 40rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
}