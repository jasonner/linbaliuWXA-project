/* pages/videoPage/index.wxss */
.header-title{
  font-size: 36rpx;
  font-family: PingFang, PingFang-SC-Bold;
  font-weight: SC-Bold;
  text-align: left;
  color: #ffffff;
  width: 100%;
  height: 10vh;
  padding-top: 6vh;
  padding-left: 4vw;
  box-sizing: border-box;
}
.header-title image{
  width: 18rpx;
  height: 30rpx;
  margin-right: 30rpx;
  display: inline-block;
}
.video-page{
  width: 100%;
  height: 100%;
  background: #42c6cb;
}
.video-page video{
  width: 100%;
  height: 100%;
}
.backBtn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 13vh;
  left: 3vw;
}
.backBtn image{
  width: 100rpx;
  height: 100rpx;
}