/* pages/guide/index.wxss */
.guideList-page{
  width: 100%;
  height: 100%;
  background: #42c6cb;
}
.guide-header-box{
  width: 100%;
  position: relative;
  z-index: 99;
}
.guide-header-box image{
  width: 100%;
  z-index: 99;
}
.header-title{
  position: absolute;
  top:0rpx;
  left: 0rpx;
  font-size: 36rpx;
  font-family: PingFang, PingFang-SC-Bold;
  font-weight: SC-Bold;
  text-align: left;
  color: #ffffff;
  width: 100%;
  height: 10vh;
  padding-top: 6vh;
  padding-left: 4vw;
  box-sizing: border-box;
}
.header-title image{
  width: 18rpx;
  height: 30rpx;
  margin-right: 30rpx;
  display: inline-block;
}
.contentext1{
  width: 750rpx;
  height: 1094rpx;
  background: #eefeff;
  border-radius: 16rpx 16rpx 0px 0px;
  margin-top: -250rpx;
  z-index: 100;
  position: relative;
} 
.contentext1 .list-box{
  display: grid;
  width: 100%;
  grid-gap: 24rpx 5rpx;
  box-sizing: border-box;
  grid-template-columns: repeat(3, 33.33%);
  padding: 24rpx;
  padding-top: 44rpx;
}
.contentext1 .list-box .list{
  width: 219rpx;
  height: auto;
  background: #fff;
  border-radius: 14rpx;
  text-align: center;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.contentext1 .list-box .list view:nth-of-type(1) image{
  width: 90rpx;
  height: 90rpx;
  margin-top: 39rpx;
}
.contentext1 .list-box .list view:nth-of-type(2){
  font-size: 28rpx;
  font-family: PingFang, PingFang-SC-Medium;
  font-weight: SC-Medium;
  text-align: center;
  color: #333333;
  margin-top: 26rpx;
}
.contentext1 .list-box .list view:nth-of-type(3) image{
  width: 50rpx;
  height: 26rpx;
  margin-top: 28rpx;
}

