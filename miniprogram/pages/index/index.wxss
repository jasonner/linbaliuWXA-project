/* pages/branch/index.wxss */
.content-box{
  width: 100%;
  height: 660rpx;
  background: url('https://forhoooss.wfbweb.com/2022/wj/linbaliu0609/branch/content-box.png') center no-repeat;
  background-size: 100% 100%;
  z-index: 2;
  position: relative;
  margin-top: -40rpx;
}
.list-box{
  width: 90%;
  margin: 0 auto;
  display: grid;
  grid-template-columns:  1fr 1fr;
  grid-row-gap: 20px;
  grid-column-gap: 20px;
  text-align: center;
  padding-top: 60rpx;
  box-sizing: border-box;
}
.list-box view:nth-of-type(1){
  margin-left: 30rpx;
}
.list-box view{
  width: 291rpx;
  height: 324rpx;
  text-align: center;
}
.list-box view image{
  width: 291rpx;
  height: 324rpx;
  margin-top: 60rpx;
}
.tip{
  font-size: 21rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: center;
  color: #178392;
  margin-top: 120rpx;
}
.logo-box{
  width: 100%;
  margin-top: 67rpx;
  margin-bottom: 80rpx;
}
.logo-box image{
  display: block;
  width: 226rpx;
  height: 131rpx;
  margin: 0 auto;
}